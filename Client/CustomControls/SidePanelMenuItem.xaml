<UserControl x:Class="Client.CustomControls.SidePanelMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.CustomControls"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Ellipse Style="{StaticResource MenuIcon}">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="{Binding IconImageSource}" />
                </Ellipse.Fill>
            </Ellipse>
            <TextBlock Text="{Binding TextSource}" Style="{StaticResource MenuLabel}"/>
        </StackPanel>
    </Grid>
</UserControl>
