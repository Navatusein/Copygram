<UserControl x:Class="Client.CustomControls.ContactsMenuItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client.CustomControls"
             RenderOptions.BitmapScalingMode="HighQuality"
             mc:Ignorable="d" 
             d:DesignHeight="200" d:DesignWidth="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="8*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Border Grid.RowSpan="2" Style="{StaticResource IconCornerBorder}">
            <Ellipse Height="30" Width="30">
                <Ellipse.Fill>
                    <ImageBrush ImageSource="{Binding ImageSource}"/>
                </Ellipse.Fill>
            </Ellipse>
        </Border>
        <TextBlock Grid.Column="1" Grid.Row="0" Style="{StaticResource NameLabel}" Text="{Binding UsernameSource}"/>
        <TextBlock Grid.Column="1" Grid.Row="1" Style="{StaticResource DateLabel}" Text="{Binding UserStatusSource}"/>
    </Grid>
</UserControl>
