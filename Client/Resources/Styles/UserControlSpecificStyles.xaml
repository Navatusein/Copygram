<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Client.CustomControls">
    <Style x:Key="UserCellSelection" TargetType="UserControl">
        <Style.Triggers>
            <Trigger Property="IsFocused" Value="True">
                <Setter Property="Background" Value="#2596be"/>
                <Setter Property="Foreground" Value="Black"/>
            </Trigger>
        </Style.Triggers>
    </Style>
    <Style x:Key="DefaultChatUser" TargetType="local:UserCell">
        <Setter Property="AvatarSource" Value="../Icons/logotype.ico"/>
        <Setter Property="Nickname" Value="Copygram Team"/>
        <Setter Property="LastMessage" Value="Hello there!"/>
    </Style>
    <Style x:Key="DefaultImageSize" TargetType="local:IconButton">
        <Setter Property="DesiredHeight" Value="30"/>
        <Setter Property="DesiredWidth" Value="30"/>
    </Style>
</ResourceDictionary>