<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        MinHeight="600" MinWidth="600"
        Icon="Resources/Icons/logotype.ico"
        Title="Copygram" Height="600" Width="1000">
    <Grid>

        <Grid x:Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="5*"/>
                <ColumnDefinition Width="10*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="9*"/>
            </Grid.RowDefinitions>

            <Grid x:Name="BackgroundOverlayGrid" Grid.RowSpan="2" Grid.ColumnSpan="3" Panel.ZIndex="1" >
                <Rectangle Name="rectOverlay" MouseDown="rectOverlay_MouseDown" 
                           Stroke="Black" StrokeThickness="2" 
                           Fill="Black" Opacity="0.3" 
                           Visibility="Collapsed" />
            </Grid>

            <Grid x:Name="OverlayElementGrid" Grid.RowSpan="2" Grid.ColumnSpan="3" Panel.ZIndex="2" >
                <local:SidePanelMenuControl x:Name="sidePanel" Background="White" Grid.Column="0"
                            HorizontalAlignment="Left" Visibility="Collapsed" 
                            VerticalAlignment="Stretch"
                            MyAvatarSource="Resources/Icons/logotype.ico"
                            MyUsernameSource="Anthony" IdSource="+000 (00) 000 00 00"/>
            </Grid>

            <StackPanel Grid.RowSpan="2" Background="#293a4c" Orientation="Vertical">
                <Border Grid.Row="0" Grid.Column="0" Style="{StaticResource IconCornerBorder}">
                    <Button Style="{StaticResource IconButton}" Cursor="Hand" MouseDown="Button_MouseDown">
                        <Image Source="Resources/Icons/menu.ico" Style="{StaticResource ImageSize}" MouseDown="Button_MouseDown"/>
                    </Button>
                </Border>

                <ListBox x:Name="FoldersGrid" Background="#293a4c" Grid.Row="1" Grid.Column="0" BorderThickness="0"/>
            </StackPanel>

            <Border Grid.Row="0" Grid.Column="1" Margin="12" Style="{StaticResource TBCornerBorder}">
                <TextBox x:Name="tbSearch" Text="Search" Style="{StaticResource TextBoxSearch}" GotFocus="tbSearch_GotFocus" LostFocus="tbSearch_LostFocus"/>
            </Border>

            <ListBox x:Name="ChatsList" Grid.Row="1" Grid.Column="1" BorderThickness="1" HorizontalContentAlignment="Stretch">
                <local:UserCellControl Style="{StaticResource DefaultChatUser}"/>
            </ListBox>

            <Grid x:Name="ChatThumbnailGrid" Grid.Row="0" Grid.Column="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="50*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                    <ColumnDefinition Width="5*"/>
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical">
                    <TextBlock Text="Name Surname" Style="{StaticResource NameLabel}"/>
                    <TextBlock Text="last seen long time ago" Style="{StaticResource LastSeenLabel}"/>
                </StackPanel>

                <Border Grid.Column="2" Style="{StaticResource IconCornerBorder}">
                    <Button  Style="{StaticResource IconButton}">
                        <Image Source="Resources/Icons/search.png" Style="{StaticResource ImageSize}"/>
                    </Button>
                </Border>

                <Border Grid.Column="3" Style="{StaticResource IconCornerBorder}">
                    <Button Style="{StaticResource IconButton}">
                        <Image Source="Resources/Icons/info.ico" Style="{StaticResource ImageSize}"/>
                    </Button>
                </Border>

                <Border Grid.Column="4" Style="{StaticResource IconCornerBorder}">
                    <Button Style="{StaticResource IconButton}">
                        <Image Source="Resources/Icons/list.png" Style="{StaticResource ImageSize}"/>
                    </Button>
                </Border>
            </Grid>

            <Grid x:Name="ChatGrid" Grid.Column="2" Grid.Row="1">

                <Grid.RowDefinitions>
                    <RowDefinition Height="10*"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid x:Name="MessageChat" Grid.Row="0">
                    <Grid.Background>
                        <ImageBrush ImageSource="Resources/Wallpapers/DefaultDay.jpg"/>
                    </Grid.Background>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                </Grid>

                <Grid x:Name="MessageSets" Grid.Row="1">
                    
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="7*"/>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!--<local:IconButton Grid.Column="0" IconImageSource="Resources/Icons/insert.png"/>-->

                    <TextBox x:Name="tbMessage" Grid.Column="1" Text="Write a message..." Style="{StaticResource TextBoxMessage}" GotFocus="tbMessage_GotFocus" LostFocus="tbMessage_LostFocus"/>

                    <Border Grid.Column="2" Style="{StaticResource IconCornerBorder}">
                        <Button Style="{StaticResource IconButton}">
                            <Ellipse Height="40" Width="40">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="Resources/Icons/emoji.png"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Button>
                    </Border>

                    <Border Grid.Column="3" Style="{StaticResource IconCornerBorder}">
                        <Button Style="{StaticResource IconButton}">
                            <Ellipse Height="40" Width="40">
                                <Ellipse.Fill>
                                    <ImageBrush ImageSource="Resources/Icons/microphone.png"/>
                                </Ellipse.Fill>
                            </Ellipse>
                        </Button>
                    </Border>
                </Grid>

            </Grid>

        </Grid>
    </Grid>
</Window>
